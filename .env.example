# Environment Configuration
NODE_ENV=production
PORT=8080

# Database Connection
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://kelolaaja:your_password@localhost:5432/kelolaaja_db"

# JWT Secrets (HARUS DIGANTI dengan nilai yang aman!)
# Generate dengan: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ACCESS_TOKEN_SECRET=your-access-token-secret-change-this-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production
SECRET_KEY=your-secret-key-change-this-in-production

# CORS Configuration
# URL frontend yang diizinkan untuk mengakses API
WEB_URL=https://your-frontend-domain.com

# Optional: Run seed on startup (set to true only for first deployment)
RUN_SEED=false
